{% apply inline_css %}
<style>
    .text {
        margin-top: .5em;
    }
    h1 {
        color: darkblue;
    }
    dt {
        text-decoration: underline solid darkblue;
    }
</style>

<p class="text">Bonjour,</p>

<h1>un nouveau T-Shirt a été créé.</h1>
<dl>
    <dt>Nom :</dt><dd>{{ t_shirt.name }}</dd>
    <dt>Référence :</dt><dd>{{ t_shirt.referenceNumber }}</dd>
    <dt>Prix :</dt><dd>{{ t_shirt.price | format_currency('EUR', {multiplier: 0.01}) }}</dd>
    <dt>Logo :</dt><dd><img src="cid:logo"></dd>
</dl>
{% endapply %}
